@article{goldshteinBreastfeedingDurationChild2025,
  title = {Breastfeeding {{Duration}} and {{Child Development}}},
  author = {Goldshtein, Inbal and Sadaka, Yair and Amit, Guy and Kasir, Nitsa and Bourgeron, Thomas and Warrier, Varun and Akiva, Pinchas and Avgil Tsadok, Meytal and Zimmerman, Deena R.},
  year = 2025,
  month = mar,
  journal = {JAMA Netw Open},
  volume = {8},
  number = {3},
  pages = {e251540},
  issn = {2574-3805},
  doi = {10.1001/jamanetworkopen.2025.1540},
  urldate = {2026-01-02},
  abstract = {Detecting and addressing potentially modifiable factors associated with healthy development is key to optimizing a child's potential. When investigating the outcomes of child development, it is important to account for disparities in feeding practices and avoid confounding bias.To estimate the independent association between breastfeeding and attainment of developmental milestones or neurodevelopmental conditions.This retrospective cohort study used data from a national network for routine child development surveillance in Israel linked with national social insurance financial entitlements for neurodevelopmental deficiencies. Participants were children born between January 2014 and December 2020 after at least 35 weeks' gestation without severe morbidity and with at least 1 follow-up surveillance visit at 2 to 3 years of age. Outcome data were collected in March 2023.Duration and exclusivity of breastfeeding in infancy.The primary outcomes were delays in attainment of developmental milestones and diagnosis of prespecified neurodevelopmental conditions. Multivariable regression, matching, and within-family analyses were used to estimate adjusted odds ratios (AORs) after accounting for potential confounding factors related to the child (gestational age, birth weight, multiple gestation, and child order in the family) and mother (age, socioeconomic status, educational level, marital status, employment, nationality, and postpartum depression).Of 570\,532 children (291\,953 [51.2\%] male), 20 642 (3.6\%) were preterm, 38\,499 (6.7\%) were small for gestational age, and 297\,571 (52.1\%) were breastfed for at least 6 months (123\,984 [41.7\%] were exclusively breastfed). Children who were breastfed for at least 6 months exhibited fewer delays in attaining language and social or motor developmental milestones compared with children exposed to less than 6 months of breastfeeding (AOR, 0.73 [95\% CI, 0.71-0.76] for exclusive breastfeeding; AOR, 0.86 [95\% CI, 0.83-0.88] for nonexclusive breastfeeding). Among 37\,704 sibling pairs, children who were breastfed for at least 6 months were less likely to demonstrate milestone attainment delays (OR, 0.91 [95\% CI, 0.86-0.97]) or be diagnosed with neurodevelopmental conditions (OR, 0.73 [95\% CI, 0.66-0.82]) compared with their sibling with less than 6 months of breastfeeding or no breastfeeding.In this cohort study, exclusive or longer duration of breastfeeding was associated with reduced odds of developmental delays and language or social neurodevelopmental conditions. These findings may guide parents, caregivers, and public health initiatives in promoting early child development.},
  langid = {english},
  annotation = {abstractTranslation: 子供の健全な発達に関連する、修正可能な要因を検出し、対処することは、子供の潜在能力を最大限に引き出す鍵となります。子供の発達の成果を調査する際には、授乳習慣の違いを考慮し、交絡バイアスを避けることが重要です。母乳育児と発達上の到達点あるいは神経発達症との独立した関連性を推定すること。この後ろ向きコホート研究では、イスラエルのルーチン小児発達サーベイランスのための全国ネットワークのデータと、神経発達障害に対する社会保険の給付データを照合して使用しました。参加者は、2014年1月から2020年12月の間に生まれた、在胎35週以上で重度の罹患がなく、2歳から3歳までに少なくとも1回のフォローアップサーベイランス受診があった子供たちです。アウトカムデータは2023年3月に収集されました。乳児期の母乳育児期間と母乳独占期間。主要なアウトカムは、発達上の到達点の遅延と、規定済みの神経発達症の診断でした。多変量回帰、マッチング、および家族内分析を用いて、子供（在胎週数、出生体重、多胎妊娠、および家族内の出生順位）および母親（年齢、社会経済的地位、教育レベル、婚姻状況、雇用、国籍、および産後うつ病）に関連する潜在的な交絡因子を考慮した後、調整オッズ比（AOR）を推定しました。570,532人の子供（男性291,953人［51.2％］）のうち、20,642人（3.6％）は早産、38,499人（6.7％）は在胎週数に対して小さく、297,571人（52.1％）は少なくとも6ヶ月間母乳育児を受けていました（123,984人［41.7％］は母乳独占育児でした）。少なくとも6ヶ月間母乳育児を受けた子供は、6ヶ月未満の母乳育児を受けた子供と比較して、言語および社会的または運動発達上の到達点の遅延が少なかった（母乳独占育児の場合、AOR、0.73［95％CI、0.71-0.76］；非独占母乳育児の場合、AOR、0.86［95％CI、0.83-0.88］）ことを示しました。37,704組の兄弟姉妹ペアのうち、少なくとも6ヶ月間母乳育児を受けた子供は、6ヶ月未満の母乳育児または母乳育児なしの兄弟姉妹と比較して、発達上の到達点の遅延を示す可能性（OR、0.91［95％CI、0.86-0.97］）あるいは神経発達症と診断される可能性（OR、0.73［95％CI、0.66-0.82］）が低かった。このコホート研究では、母乳独占育児またはより長い期間の母乳育児は、発達の遅延および言語または社会神経発達症のオッズの低下と関連していました。これらの発見は、親、保護者、および公衆衛生の取り組みが、早期の子供の発達を促進する上で指針となる可能性があります。},
  file = {C:\Users\user\OneDrive_HU\Zotero\1_Paper\Press\2025_MCthesis\Goldshtein et al. - 2025 - Breastfeeding Duration and Child Development.pdf}
}

@article{jovelMetagenomicsMetatranscriptomicsMurine2022,
  title = {Metagenomics {{Versus Metatranscriptomics}} of the {{Murine Gut Microbiome}} for {{Assessing Microbial Metabolism During Inflammation}}},
  author = {Jovel, Juan and Nimaga, Aissata and Jordan, Tracy and O'Keefe, Sandra and Patterson, Jordan and Thiesen, Aducio and Hotte, Naomi and {Bording-Jorgensen}, Michael and Subedi, Sudip and Hamilton, Jessica and Carpenter, Eric J. and Lauga, B{\'e}atrice and Elahi, Shokrollah and Madsen, Karen L. and Wong, Gane Ka-Shu and Mason, Andrew L.},
  year = 2022,
  month = feb,
  journal = {Front. Microbiol.},
  volume = {13},
  publisher = {Frontiers},
  issn = {1664-302X},
  doi = {10.3389/fmicb.2022.829378},
  urldate = {2026-01-02},
  abstract = {Shotgun metagenomics studies have improved our understanding of microbial population dynamics and have revealed significant contributions of microbes to gut homeostasis. They also allow in silico inference of the metagenome. While they link the microbiome with metabolic abnormalities associated with disease phenotypes, they do not capture microbial gene expression patterns that occur in response to the multitude of stimuli that constantly ambush the gut environment. Metatranscriptomics closes that gap, but its implementation is more expensive and tedious. We assessed the metabolic perturbations associated with gut inflammation using shotgun metagenomics and metatranscriptomics. Shotgun metagenomics detected changes in abundance of bacterial taxa known to be SCFA producers, which favors gut homeostasis. Bacteria in the phylum Firmicutes were found at decreased abundance, while those in phyla Bacteroidetes and Proteobacteria were found at increased abundance. Surprisingly, inferring the coding capacity of the microbiome from shotgun metagenomics data did not result in any statistically significant difference, suggesting functional redundancy in the microbiome or poor resolution of shotgun metagenomics data to profile bacterial pathways, especially when sequencing is not very deep. Obviously, the ability of metatranscriptomics libraries to detect transcripts expressed at basal (or simply low) levels is also dependent on sequencing depth. Nevertheless, metatranscriptomics informed about contrasting roles of bacteria during inflammation. Functions involved in nutrient transport, immune suppression and regulation of tissue damage were dramatically upregulated, perhaps contributed by homeostasis-promoting bacteria. Functions ostensibly increasing bacteria pathogenesis were also found upregulated, perhaps as a consequence of increased abundance of Proteobacteria. Bacterial protein synthesis appeared downregulated. In summary, shotgun metagenomics was useful to profile bacterial population composition and taxa relative abundance, but did not inform about differential gene content associated with inflammation. Metatranscriptomics was more robust for capturing bacterial metabolism in real time. Although both approaches are complementary, it is often not possible to apply them in parallel. We hope our data will help researchers to decide which approach is more appropriate for the study of different aspects of the microbiome.},
  langid = {english},
  keywords = {bacterial metabolic pathways,gut inflammation-on-a-chip,metatranscriptomics,microbiome,Shotgun metagenomics},
  annotation = {abstractTranslation: ショットガンメタゲノミクス研究により、微生物集団動態の理解が深まり、腸管恒常性に対する微生物の重要な寄与が明らかになりました。また、メタゲノムのインシリコ推論も可能になります。これらは、マイクロバイオームと疾患の表現型に関連する代謝異常とを関連付けますが、腸内環境を絶えず待ち伏せする多数の刺激に応答して発生する微生物の遺伝子発現パターンを捕捉することはできません。メタトランスクリプトミクスはそのギャップを埋めますが、その実装はより高価で退屈です。私たちは、ショットガンメタゲノミクスとメタトランスクリプトミクスを使用して、腸の炎症に関連する代謝の混乱を評価しました。ショットガンメタゲノミクスにより、腸の恒常性を促進するSCFA生産者として知られる細菌分類群の存在量の変化が検出されました。ファーミクテス門の細菌の存在量は減少しましたが、バクテロイデス門とプロテオバクテリア門の細菌の存在量は増加しました。驚くべきことに、ショットガンメタゲノミクスデータからマイクロバイオームのコーディング能力を推測しても、統計的に有意な差は生じず、特に配列決定がそれほど深くない場合には、マイクロバイオームの機能的冗長性、または細菌経路をプロファイリングするためのショットガンメタゲノミクスデータの解像度が低いことを示唆しています。明らかに、基礎レベル (または単に低レベル) で発現された転写物を検出するメタトランスクリプトミクス ライブラリーの能力は、シーケンシングの深度にも依存します。それにもかかわらず、メタトランスクリプトミクスは、炎症中の細菌の対照的な役割について情報を与えた。栄養素の輸送、免疫抑制、組織損傷の制御に関与する機能は、おそらく恒常性を促進する細菌によって寄与されて、劇的に上方制御されました。おそらくプロテオバクテリアの存在量が増加した結果として、表面上細菌の病因を増加させる機能も上方制御されていることが判明した。細菌のタンパク質合成は下方制御されているようです。要約すると、ショットガン メタゲノミクスは細菌集団の組成と分類群の相対的な存在量をプロファイリングするのに役立ちましたが、炎症に関連する異なる遺伝子含有量については情報を提供しませんでした。メタトランスクリプトミクスは、細菌の代謝をリアルタイムで捕捉する場合により堅牢でした。両方のアプローチは補完的ですが、多くの場合、それらを並行して適用することはできません。私たちのデータが、研究者がマイクロバイオームのさまざまな側面の研究にどのアプローチがより適切であるかを決定するのに役立つことを願っています。},
  file = {C:\Users\user\OneDrive_HU\Zotero\1_Paper\Press\2025_MCthesis\Jovel et al. - 2022 - Metagenomics Versus Metatranscriptomics of the Murine Gut Microbiome for Assessing Microbial Metabol.pdf}
}

@article{kodaMolecularBasisSecretor1996,
  title = {Molecular Basis for Secretor Type Alpha(1,2)-Fucosyltransferase Gene Deficiency in a {{Japanese}} Population: A Fusion Gene Generated by Unequal Crossover Responsible for the Enzyme Deficiency.},
  shorttitle = {Molecular Basis for Secretor Type Alpha(1,2)-Fucosyltransferase Gene Deficiency in a {{Japanese}} Population},
  author = {Koda, Y. and Soejima, M. and Liu, Y. and Kimura, H.},
  year = 1996,
  month = aug,
  journal = {Am J Hum Genet},
  volume = {59},
  number = {2},
  pages = {343--350},
  issn = {0002-9297},
  urldate = {2025-08-06},
  abstract = {About 20\%-25\% of Caucasian individuals are nonsecretors who fail to express soluble A, B, H, and Lewis b histo-blood group antigens in secretory organs and secretory fluids because of the absence of the Secretor gene (FUT2)-encoded alpha(1,2)-fucosyltransferase (Se enzyme) activity. Recently, the FUT2 and a pseudogene have been isolated, and an Se enzyme-deficient allele (se) caused by a nonsense mutation (G428A, se1) in Caucasians has also been reported. Although we were unable to find the se1 allele, we have found a missense mutation (A385T, se2) and two nonsense mutations (C571T, se3 and C628T, se4) in the Japanese Se enzyme-deficient alleles. In addition, we have found a fusion gene, which consisted of the 5'-region of the pseudogene and the 3'-region of the functional FUT2, as a Se enzyme-deficient allele (se5). The DNA sequence analysis of the fusion gene indicated that the crossover region corresponded to regions between bases 253 and 313 of the pseudogene and between bases 211 and 271 of the FUT2. This finding suggested that the fusion gene was generated by homologous but unequal crossover. A population study on 141 randomly selected Japanese has indicated that the se2 is a common Se enzyme-deficient allele in the Japanese population. The results suggest that Se enzyme-deficient alleles are race specific.},
  pmcid = {PMC1914724},
  pmid = {8755920},
  file = {C:\Users\user\OneDrive_HU\Zotero\1_Paper\BM\Koda et al. - 1996 - Molecular basis for secretor type alpha(1,2)-fucosyltransferase gene deficiency in a Japanese popula.pdf}
}

@article{komatsuAssociationsMaternalDiet2023,
  title = {Associations between {{Maternal Diet}}, {{Human Milk Macronutrients}}, and {{Breast-Fed Infant Growth}} during the {{First Month}} of {{Life}} in the {{SMILE Iwamizawa}} in {{Japan}}},
  author = {Komatsu, Yosuke and Wada, Yasuaki and Tabata, Fuka and Kawakami, Satomi and Takeda, Yasuhiro and Nakamura, Kiminori and Ayabe, Tokiyoshi and Nakamura, Koshi and Kimura, Takashi and Tamakoshi, Akiko},
  year = 2023,
  month = jan,
  journal = {Nutrients},
  volume = {15},
  number = {3},
  pages = {654},
  publisher = {Multidisciplinary Digital Publishing Institute},
  issn = {2072-6643},
  doi = {10.3390/nu15030654},
  urldate = {2023-09-15},
  abstract = {Maternal diet may affect human milk macronutrients, but it remains to be elucidated whether this is also influential in infant growth. This study aimed to examine (1) how maternal diet influences human milk macronutrients, and (2) to what extent the variation in milk macronutrients affects infant growth during the first month of life. In 71 Japanese lactating women, maternal dietary information was collected from the brief-type self-administered diet history questionnaire, and anthropometry of mother--infant dyads was collected from medical records. Macronutrients in milk were analyzed by a Human Milk Analyzer. Maternal retinol intake was associated with the carbohydrate content in human milk at 1-month postpartum (standardized {$\beta$} coefficient: 0.287; p = 0.038). Moreover, the energy content in human milk was associated with an increase in the weight standard deviation score based on the WHO growth standard at 1 month of age (standardized {$\beta$} coefficient: 0.399; p = 0.046). Nevertheless, the milk macronutrient was not associated with the risk of infant growth abnormalities. In conclusion, a part of the maternal diet impacts macronutrient contents in human milk, but milk macronutrients have a limited effect on infant growth only within the normal growth curve during the first month of life.},
  copyright = {http://creativecommons.org/licenses/by/3.0/},
  langid = {english},
  keywords = {coi},
  annotation = {abstractTranslation: 母乳中のマクロ栄養素は母体の食事に影響される可能性があるが、それが乳児の成長にも影響するかどうかは解明されていない。本研究は、(1) 母体の食事が母乳中のマクロ栄養素にどのように影響するか、(2) 母乳中のマクロ栄養素の変動が、生後1ヶ月における乳児の成長にどの程度影響するかを検討することを目的とした。71人の日本の授乳婦を対象に、簡略型自記式食事歴質問票から母体の食事情報を、母子ペアの身体計測を医療記録から収集した。母乳中のマクロ栄養素はHuman Milk Analyzerを用いて分析した。母体のレチノール摂取量は、産後1ヶ月時の母乳中の炭水化物量と関連していた（標準化{$\beta$}係数：0.287；p = 0.038）。さらに、母乳中のエネルギー量は、WHO成長基準に基づく1ヶ月齢時の体重標準偏差得点の上昇と関連していた（標準化{$\beta$}係数：0.399；p = 0.046）。しかしながら、母乳中のマクロ栄養素は、乳児の成長異常のリスクとは関連していなかった。結論として、母体の食事の一部は母乳中のマクロ栄養素組成に影響を与えるが、母乳中のマクロ栄養素は、生後1ヶ月において正常成長曲線内でのみ、乳児の成長に限定的な影響を与える。},
  file = {C:\Users\user\OneDrive_HU\Zotero\Press\241001_NMR討論会\Associations between Maternal Diet, Human Milk Macronutrients, and Breast-Fed_2023.pdf}
}

@article{martinEffectsPromotingLongterm2017,
  title = {Effects of {{Promoting Long-term}}, {{Exclusive Breastfeeding}} on {{Adolescent Adiposity}}, {{Blood Pressure}}, and {{Growth Trajectories}}: {{A Secondary Analysis}} of a {{Randomized Clinical Trial}}},
  shorttitle = {Effects of {{Promoting Long-term}}, {{Exclusive Breastfeeding}} on {{Adolescent Adiposity}}, {{Blood Pressure}}, and {{Growth Trajectories}}},
  author = {Martin, Richard M. and Kramer, Michael S. and Patel, Rita and {Rifas-Shiman}, Sheryl L. and Thompson, Jennifer and Yang, Seungmi and Vilchuck, Konstantin and Bogdanovich, Natalia and Hameza, Mikhail and Tilling, Kate and Oken, Emily},
  year = 2017,
  month = jul,
  journal = {JAMA Pediatr},
  volume = {171},
  number = {7},
  pages = {e170698},
  issn = {2168-6203},
  doi = {10.1001/jamapediatrics.2017.0698},
  urldate = {2026-01-02},
  abstract = {OBJECTIVE To investigate the effects of a breastfeeding promotion intervention on adiposity and BP at age 16 years and on longitudinal growth trajectories from birth. DESIGN, SETTING, AND PARTICIPANTS Cluster-randomized Promotion of Breastfeeding Intervention Trial. Belarusian maternity hospitals and affiliated polyclinics (the clusters) were allocated into intervention (n = 16) or control arms (n = 15) in 1996 and 1997. The trial participants were 17 046 breastfeeding mother-infant pairs; of these, 13 557 children (79.5\%) were followed up at 16 years of age between September 2012 and July 2015. INTERVENTIONS Breastfeeding promotion, modeled on the Baby-Friendly Hospital Initiative. MAIN OUTCOMES AND MEASURES Body mass index (BMI, calculated as weight in kilograms divided by height in meters squared); fat and fat-free mass indices and percentage of body fat from bioimpedance; waist circumference; overweight and obesity; height; BP; and longitudinal growth trajectories. The primary analysis was modified intention-to-treat (without imputation for losses to follow-up) accounting for within-clinic clustering. RESULTS We examined 13 557 children at a median age of 16.2 years (48.5\% were girls). The intervention substantially increased breastfeeding duration and exclusivity compared with the control arm (exclusively breastfed: 45\% vs 6\% at 3 months, respectively). Mean differences at 16 years between intervention and control groups were 0.21 (95\% CI, 0.06-0.36) for BMI; 0.21 kg/m2 (95\% CI, -0.03 to 0.44) for fat mass index; 0.00 kg/m2 (95\% CI, -0.21 to 0.22) for fat-free mass index; 0.71\% (95\% CI, -0.32 to 1.74) for percentage body fat; -0.73 cm (-2.48 to 1.02) for waist circumference; 0.05 cm (95\% CI, -0.85 to 0.94) for height; -0.54 mm Hg (95\% CI, -2.40 to 1.31) for systolic BP; and 0.71 mm Hg (95\% CI, -0.68 to 2.10) for diastolic BP. The odds ratio for overweight/obesity (BMI 85th percentile vs {$<$}85th percentile) was 1.14 (95\% CI, 1.02-1.28) and the odds ratio for obesity (BMI 95th percentile vs {$<$}95th percentile) was 1.09 (95\% CI, 0.92-1.29). The intervention resulted in a more rapid rate of gain in postinfancy height (1 to 2.8 years), weight (2.8 to 14.5 years), and BMI (2.8 to 8.5 years) compared with the control arm. The intervention had little effect on BMI z score changes after 8.5 years. CONCLUSIONS AND RELEVANCE A randomized intervention that increased the duration and exclusivity of breastfeeding was not associated with lowered adolescent obesity risk or BP. On the contrary, the prevalence of overweight/obesity was higher in the intervention arm. All mothers initiated breastfeeding, so findings may not apply to comparisons of the effects of breastfeeding vs formula feeding.},
  langid = {english},
